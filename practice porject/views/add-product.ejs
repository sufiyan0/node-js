<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <h1 class="logo">Add Product</h1>
            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                    <li class="nav-item"><a href="/add-product" class="nav-link">add prodict</a></li>
                    <li class="nav-item"><a href="/products" class="nav-link">All Products</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Add Product Form -->
    <main class="form-container">
        <div class="container">
            <h2 class="form-title">Add a New Product</h2>
            <form action="/products" method="POST" class="add-product-form">
                <!-- Name -->
                <div class="form-group"> 
                    <label for="name" class="form-label">Product Name</label>
                    <input type="text" id="name" name="name" class="form-input" placeholder="Enter product name"
                        required>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" class="form-textarea" rows="4"
                        placeholder="Enter product description" required></textarea>
                </div>

                <!-- Image -->
                <div class="form-group">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="url" id="image" name="image" class="form-input" placeholder="Enter image URL" required>
                </div>

                <!-- Price -->
                <div class="form-group">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" id="price" name="price" class="form-input" placeholder="Enter price"
                        step="0.01" required>
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add Product</button>
                </div>
            </form>
        </div>
    </main>
</body>

</html>